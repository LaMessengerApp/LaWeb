{% trans_default_domain 'FOSUserBundle' %}

<div id="formlogin" style="height:450px">
	<h1>LÃ  <small>- registration</small></h1>
	<form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
	    <div class="form-group" id="fos_user_registration_form">

	    	<div class="form-group">
	  			<label for="email">Email</label>
	        	{{ form_widget(form.email, { 'attr': {'class': 'form-control', 'placeholder': 'Email'|trans } }) }}
	        	{{ form_errors(form.email) }}
	        </div>

	        <div class="form-group">
		  		<label for="username">Username</label>
		        {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder': 'Username'|trans } }) }}
		        {{ form_errors(form.username) }}
		    </div>

		    <div class="form-group">
	  			<label for="password">Password</label>
	        	{{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control', 'placeholder': 'Password'|trans } }) }}
	        	{{ form_errors(form.plainPassword.first) }}
	        </div>

	        {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control', 'placeholder': 'Password confirmation'|trans } }) }}
	        {{ form_errors(form.plainPassword.second) }}

	        {{ form_rest(form) }}

	    </div>
	    <div>
	    <button type="submit" id="_submit" name="_submit" value="{{ 'registration.submit'|trans }}" class="btn btn-default">Register</button>
	    </div>
	</form>
</div>
